name: {{ ats_runtime_compose_project_name }}

services:
  postgres:
    image: postgres:16-alpine
    restart: unless-stopped
    env_file:
      - {{ ats_runtime_env_file }}
    volumes:
      - postgres_data:/var/lib/postgresql/data
    ports:
      - "{{ ats_runtime_postgres_publish_port }}"
    healthcheck:
      test: ["CMD-SHELL", "pg_isready -U $$POSTGRES_USER -d $$POSTGRES_DB"]
      interval: 10s
      timeout: 5s
      retries: 5

  bot-api:
    image: {{ ats_runtime_image }}
    restart: unless-stopped
    env_file:
      - {{ ats_runtime_env_file }}
    command: {{ ats_runtime_services.bot_api.command | to_json }}
    ports:
      - {{ ats_runtime_bot_api_publish_port }}
    depends_on:
      postgres:
        condition: service_healthy

  bot-matrix:
    image: {{ ats_runtime_image }}
    restart: unless-stopped
    env_file:
      - {{ ats_runtime_env_file }}
    command: {{ ats_runtime_services.bot_matrix.command | to_json }}
    depends_on:
      postgres:
        condition: service_healthy

  worker:
    image: {{ ats_runtime_image }}
    restart: unless-stopped
    env_file:
      - {{ ats_runtime_env_file }}
    command: {{ ats_runtime_services.worker.command | to_json }}
    depends_on:
      postgres:
        condition: service_healthy

volumes:
  postgres_data:
